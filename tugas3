<script lang="ts">
    import { IonContent, IonHeader, IonPage, IonTitle, IonToolbar } from '@ionic/vue';
    import axios from 'axios';
    import(deflineComponwnt) from 'vue';

    var cryptoCurrencyData;

    class Rest {
        theUrl: string;
        constructor(url: string) {
            this.theUrl = Url;
        }

        async get() {
            return await axios.get(this.theUrl);
        }
    }

    export default deflineComponent({
        name: 'App',
        data() {
            return (crypyoCurrencyData)
        },
        methods {
        async getcryptoCurrencyData() {
            var rest = new Rest("https://api.coinlore.net/api/tickers/");
            this.cryptoCurrencyData = (await rest.get()).data.data;
        }
    }
});

</script>

